<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/l1"
    android:orientation="vertical"
    android:background="@drawable/backgroundlogin"
    tools:context=".LoginSignUPForgepassANDVerificatiom.Signin"
    android:weightSum="11"
    >
<androidx.legacy.widget.Space
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"/>


<androidx.legacy.widget.Space
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".5"/>
<LinearLayout
android:elevation="3dp"
    android:layout_marginHorizontal="15dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="5"
    android:background="@drawable/backgroundedittext">

<ImageView
    android:layout_width="0dp"
    android:layout_weight="1"

    android:layout_height="50dp"
    android:src="@drawable/email"
    android:layout_gravity="center_vertical"
    />
    <TextView
        android:layout_marginVertical="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".01"
        android:background="@color/colorAccent"/>



    <EditText
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.99"
        android:id="@+id/usermail"
        android:hint="  Email Adress"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
/>



</LinearLayout>


    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>
    <LinearLayout

        android:elevation="3dp"
android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:background="@drawable/backgroundedittext">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="40dp"
            android:src="@drawable/pass"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".01"
            android:background="@color/colorAccent"/>



        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="  Password"
            android:id="@+id/userpass"
android:inputType="textPassword"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:layout_marginRight="15dp"
            />


        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".90"
            android:text="show"
            android:id="@+id/show"
            android:textAlignment="center"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="3sp"
            android:autoSizeTextType="uniform"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:id="@+id/forgotpass"
        android:clickable="true"
        android:layout_gravity="right"
        android:text="Forgot Password ?"
android:layout_marginRight="15dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="3sp"
        android:autoSizeTextType="uniform"
        android:textColor="@android:color/black"/>


    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>



<Button
    android:layout_width="100dp"
    android:layout_height="0dp"
    android:layout_weight=".7"
    android:background="@drawable/backgroundbtn"

    android:textStyle="normal"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:textColor="@android:color/white"
    android:text="Sign In"
    android:clickable="true"
    android:id="@+id/signin"

    android:autoSizeMaxTextSize="20sp"
    android:autoSizeMinTextSize="3sp"
    android:autoSizeTextType="uniform"
    tools:ignore="NestedWeights" />

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="Don't have an account ?"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="3sp"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"/>
        <TextView
            android:clickable="true"
            android:id="@+id/TextSignup"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight=".4   "
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="3sp"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:textColor="@android:color/black"/></LinearLayout>
</LinearLayout>