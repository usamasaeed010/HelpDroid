<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/l1"
    android:orientation="vertical"
    android:background="@drawable/backgroundlogin"
    tools:context=".LoginSignUPForgepassANDVerificatiom.Signin"
    android:weightSum="14"
    >
<androidx.legacy.widget.Space
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"/>


<LinearLayout
    android:elevation="5dp"

    android:layout_marginHorizontal="15dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="5"
    android:background="@drawable/backgroundedittext">

<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="0dp"
    android:layout_weight="1"

    android:layout_height="50dp"
    android:src="@drawable/user"
    android:layout_gravity="center_vertical"
    />
    <TextView
        android:layout_marginVertical="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".01"
        android:background="@android:color/black"/>
    
    
    
    <EditText
        android:id="@+id/usernamesignup"
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.95"
        android:hint="  User Name"
        android:textColor="@android:color/black"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
/>



</LinearLayout>


    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>
    <LinearLayout
        android:elevation="5dp"

        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:background="@drawable/backgroundedittext">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="37dp"
            android:src="@drawable/phone"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".01"
            android:background="@android:color/black"/>



        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:hint="  03xxxxxxxxx"
            android:inputType="phone"
            android:id="@+id/phnesignup"

            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:layout_marginRight="15dp"
            />



    </LinearLayout>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>
    <LinearLayout
        android:elevation="5dp"

        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:background="@drawable/backgroundedittext">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="50dp"
            android:src="@drawable/email"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".01"
            android:background="@android:color/black"/>



        <EditText
            android:id="@+id/emailsignup"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:layout_weight="3.95"
            android:hint="  Email Adress"
            android:textColor="@android:color/black"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            />



    </LinearLayout>


    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>
    <LinearLayout
        android:elevation="5dp"

        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:background="@drawable/backgroundedittext">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="37dp"
            android:src="@drawable/pass"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".01"
            android:background="@android:color/black"/>



        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="  Password"
            android:inputType="textPassword"
            android:id="@+id/passsignup"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:layout_marginRight="15dp"
            />


        <TextView
            android:id="@+id/showsignuppass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".90"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="3sp"
            android:autoSizeTextType="uniform"
            android:text="show"
            android:textAlignment="center"
            android:textColor="@android:color/black" />
    </LinearLayout>





    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <Button
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:background="@drawable/backgroundbtn"

        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:text="Sign Up"
        android:clickable="true"
        android:id="@+id/signup"

        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="3sp"
        android:autoSizeTextType="uniform"
        tools:ignore="NestedWeights" />

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text=" Already have an account ?"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="3sp"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"/>
        <TextView
            android:clickable="true"
            android:id="@+id/TextSignin"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight=".4   "
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="3sp"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:textColor="@android:color/black"/></LinearLayout>


</LinearLayout>